<!--pages/detail-video/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<video src="{{mvURLInfo.url}}"
        autoplay
        loop>
</video>

<!-- 视频详情 -->
<view class="videoContent">
    <view class="title">{{mvDetail.name}}</view>
    <view class="name">{{mvDetail.artistName}}</view>
    <view class="name">{{format.formatCout(mvDetail.playCount)}}次播放 - {{mvDetail.publishTime}}</view>
</view>

<view class="itemList">
    <view class="info">推荐视频</view>
    <view class="item" wx:for="{{mvRelated}}" wx:key="vid">
        <view class="img"><image class="image" src="{{item.coverUrl}}" mode="widthFix"></image></view>
        <view class="content">
            <view class="con-fis">{{item.title}}</view>
            <view class="con-las">{{item.creator[0].userName}}</view>
        </view>
    </view>
</view>
