<!--pages/detail-serrch/index.wxml-->
<!-- 搜索框 -->
<van-search background="#f7f7f7" shape="round" bind:change="handSearchChang" ></van-search>

<!-- 热门搜索 -->
<view class="hot" wx:if="{{!searchValue.length && !suggestSongs.length}}">
    <area-header title="热门搜索" showRight="{{false}}"></area-header>
    <view class="list">
        <block wx:for="{{hotKeywords}}" wx:key="first" >
            <view class="tag">{{item.first}}</view>
        </block>
    </view>
</view>

<!-- 建议搜索 -->
<view class="suggest" wx:else="{{!searchValue.length}}">
    <view class="title">搜索"{{searchValue}}"</view>
    <view class="list">
        <block wx:for="{{suggestSongs}}" wx:key="keyword">
            <view class="item">
                <image class="icon" mode="widthFix" src="/images/icon/search_icon.png"></image>
                <text>{{item.keyword}}</text>
            </view>
        </block>
    </view>
</view>

<!-- 搜索结果 -->
<view></view>
