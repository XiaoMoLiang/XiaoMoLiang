<!--pages/home-music/index.wxml-->
<!-- 搜索框 -->
<van-search disabled background="#fafafa" shape="round" placeholder="搜索你喜欢的歌曲" bind:click-input="headClickInput" />

<!-- 轮播图 -->
<swiper class="swiper" indicator-dots autoplay circular style="height: {{swiperHeight}}px;">
    <block wx:for="{{bannerList}}" wx:key="bannerId">
        <swiper-item class="swiper-item">
            <image class="image" src="{{item.pic}}" mode="widthFix" bindload="handLeSwiper"></image>
        </swiper-item>
    </block>
</swiper>

<!-- 推荐歌曲 -->
<view class="recommend-song" wx:if="{{recommendSongs.length > 0}}">
    <area_header title="推荐歌曲" bind:click="handMoreClick"></area_header>
    <view class="song-list">
        <block wx:for="{{recommendSongs}}" wx:key="id">
            <song-item-vq item="{{item}}" bindtap="handleSongItemClick" data-index="{{index}}"></song-item-vq>
        </block>
    </view>
</view>

<!-- 热门/推荐歌单 -->
<song-menu-area title="热门歌单" songMenu="{{playLists}}" wx:if="{{playLists.length > 0}}"></song-menu-area>
<song-menu-area title="歌单" songMenu="{{recommendSongMenu}}" wx:if="{{recommendSongMenu.length > 0}}"></song-menu-area>

<!-- 巅峰榜 -->
<view class="ranking">
    <area_header title="巅峰榜" showRight="{{false}}"></area_header>
    <view class="ranking-list">
        <block wx:for="{{rankings}}" wx:key="index">
            <ranking-area-item item="{{item}}" bindtap="handRankingClick" data-idx="{{index}}"></ranking-area-item>
        </block>
    </view>
</view>

<!-- 播放工具栏 -->
<view class="play-bar-placeholder"  wx:if="{{currentSong.id}}"></view>
<view class="play-bar" bindtap="handlePlayBarClick" wx:if="{{currentSong.id}}">
    <view class="left">
        <image 
        class="album album-anim" 
        mode="aspectFill" 
        style="animation-play-state: {{playAnimState}};"
        src="{{currentSong.al.picUrl}}"
        ></image>
        <view class="name">{{currentSong.name}}</view>
    </view>
    <view class="right">
        <image 
        class="icon play" 
        src="/images/music/{{isPlaying ? 'pause' : 'play' }}_icon.png" catchtap="handlePlayBtnClick"
        ></image>
        <image class="icon play" src="/images/music/playlist_icon.png"></image>
    </view>
</view>