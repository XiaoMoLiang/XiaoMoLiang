/* components/navigation-bar/index.wxss */
.nav-bar {
    display: flex;
    text-align: center;
}

.left,
.right {
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.left .left-arrow {
    display: none;
}

.left-slot:empty+.left-arrow {
    display: block;
}

.left .left-arrow .icon {
    width: 44rpx;
    display: block;
}

.center {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.center-title {
    display: none;
}

.center-slot:empty+.center-title {
    display: block;
}